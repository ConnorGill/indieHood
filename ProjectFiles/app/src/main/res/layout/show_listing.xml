<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginBottom="6dp"
    app:cardBackgroundColor="#eaeaea"
    app:cardCornerRadius="4dp"
    tools:viewBindingIgnore="true">

    <RelativeLayout
        android:id="@+id/show_listing"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp">

        <ImageView
            android:id="@+id/bandFavorited"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/bandName"
            android:paddingTop="13dp"
            />

        <ImageView
            android:id="@+id/venueFavorited"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/venue"
            android:paddingTop="40dp"
            />

        <TextView
            android:id="@+id/bandName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:text="Band Name"
            android:textColor="@android:color/black"
            android:textSize="25sp"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/interested"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="7dp"
            android:buttonTint="@android:color/holo_green_light"/>

        <TextView
            android:id="@+id/interested_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="People interested"
            android:textColor="@android:color/holo_green_dark"
            android:textStyle="bold"
            android:textSize="12dp"
            android:layout_alignParentBottom="true"
            android:paddingLeft="45dp"
            android:paddingBottom="8dp"/>

        <TextView
            android:id="@+id/venue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bandName"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:paddingLeft="8dp"
            android:text="Venue"
            android:textColor="@android:color/black"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/day_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_above="@+id/time_label"
            android:layout_toLeftOf="@+id/time"
            android:paddingRight="10dp"
            android:layout_marginRight="77dp"
            android:text="Date:"
            android:textColor="@android:color/black"
            android:layout_marginBottom="5dp"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/time"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:text="showDay"
            android:layout_marginBottom="5dp"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/time_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_above="@+id/price"
            android:layout_toLeftOf="@+id/time"
            android:paddingRight="10dp"
            android:layout_marginRight="75dp"
            android:layout_marginBottom="10dp"
            android:text="Time:"
            android:textColor="@android:color/black"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/price"
            android:layout_alignParentRight="true"
            android:text="showTime"
            android:layout_marginRight="5dp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="10dp"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:paddingRight="10dp"
            android:text="Price"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="17sp"
            android:layout_marginBottom="5dp"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>